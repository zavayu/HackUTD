# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/prodigypm
MONGODB_DB_NAME=prodigypm

# Authentication Configuration
JWT_SECRET=generate-a-secure-256-bit-random-string
JWT_EXPIRATION=24h
ENCRYPTION_KEY=generate-a-secure-256-bit-random-string

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=prodigypm-embeddings

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_MAX_REQUESTS=10
RATE_LIMIT_SYNC_MAX_REQUESTS=5